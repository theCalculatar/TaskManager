<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TaskManager" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/darker</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/darker</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/darker</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/darker</item>
        <item name="iconTint">@color/white</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="background">@color/darkBlue</item>
        <item name="backgroundColor">@color/darkBlue</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="RoundedCornersBottomDialog" parent="@style/Theme.Material3.DayNight.BottomSheetDialog">
        <item name="background">@drawable/ractangle_top_18dp</item>
        <item name="android:backgroundTint">@color/darker</item>
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
